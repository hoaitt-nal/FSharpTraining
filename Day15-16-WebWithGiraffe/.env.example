# Azure Cosmos DB Configuration
# Copy this file to .env and update with your actual values

# Cosmos DB endpoint URL
COSMOS_ENDPOINT_URL=https://your-cosmosdb-account.documents.azure.com:443/

# Cosmos DB primary key (keep this secret!)
COSMOS_PRIMARY_KEY=your-cosmos-db-primary-key-here

# Database name
COSMOS_DATABASE_ID=SampleDB

# Container names
COSMOS_CUSTOMERS_CONTAINER_ID=Customers

# Web Server Configuration
ASPNETCORE_URLS=http://localhost:5002